# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# This key is required for the LLM-powered storytelling agents
OPENAI_API_KEY=your-api-key-here

# Application Settings
# Set to True for development, False for production
DEBUG=True

# API Configuration
# Host and port for the FastAPI server
API_HOST=0.0.0.0
API_PORT=8000

# Audio Generation Settings
# Directory where generated audio files will be saved
AUDIO_OUTPUT_DIR=audio_output

# Model Configuration
# Default OpenAI model to use for story generation
# Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo-preview

# Temperature controls randomness in generation (0.0-1.0)
# Lower = more focused, Higher = more creative
MODEL_TEMPERATURE=0.7
